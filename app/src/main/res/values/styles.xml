<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10pt</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/index_btn_shape</item>
    </style>
    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#17A1FF</item>
        <item name="android:textSize">12pt</item>
    </style>
    <style name="TitleIndex" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#17A1FF</item>
        <item name="android:textSize">10pt</item>
    </style>

</resources>